  "templates": [
    {
      "name": "default",
      "dependencies": [
        {
          "id": "Spring4D.Base",
          "version": "[2.0.0-dev3,]"
        }
      ],
      "comment": "due to the layout of the repo and relative paths in the packages we need to keep the same layout",
      "source": [
        {
          "src": ".\\*.inc",
          "flatten": false,
          "dest": "src"
        },
        {
          "src": ".\\Data\\**\\*.pas",
          "flatten": false,
          "dest": "src\\Data"
        },
        {
          "src": "..\\packages\\Delphi$compilerNoPoint$$CompilerCodeName$\\Spring.Data.*",
          "flatten": false,
          "dest": "packages\\Delphi$compilerNoPoint$$CompilerCodeName$"
        }
      ],
      "searchPaths": [
        {
          "path": "src"
        },
        {
          "path": "src\\Data"
        },
        {
          "path": "src\\Data\\ObjectDataSet"
        }
      ]
    }
